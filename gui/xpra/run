#!/bin/sh
TMPDIR=/tmp/xpra-mmap xpra start $DISPLAY\
  --tcp-auth=env\
  --bind-tcp=0.0.0.0:10000\
  --compress=0\
  --html=on\
  --keyboard-sync=yes\
  --mmap=yes\
  --printing=no\
  --pulseaudio=no\
  --readonly=no\
  --daemon=${XPRA_DAEMON}\
  --sharing=no\
  --speaker=no\
  --webcam=no \
  --xvfb="Xvfb -dpi 96 -noreset -nolisten tcp +extension GLX +extension RANDR +extension RENDER +extension Composite -screen 0 1600x900x24+32" \
  --start="$@"
